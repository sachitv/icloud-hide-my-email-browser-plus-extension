{
  "name": "icloud-hide-my-email-plus-browser-extension",
  "version": "1.3.1",
  "description": "Cross-browser extension bringing iCloud's Hide My Email service to more browsers as Hide My Email+.",
  "license": "MIT",
  "author": "Sachit Vithaldas",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachitv/icloud-hide-my-email-browser-plus-extension.git"
  },
  "scripts": {
    "build:brave": "wxt build --browser=brave",
    "build:chrome": "wxt build --browser=chrome",
    "build:edge": "wxt build --browser=edge",
    "build:firefox": "wxt build --browser=firefox",
    "build": "wxt build --browser=brave",
    "check:licenses": "node utils/checkLicenses.mjs",
    "dev": "wxt",
    "biome:format": "biome format --write .",
    "biome:format:check": "biome format",
    "lint:check": "biome lint",
    "lint": "biome lint --write .",
    "prettier:check": "prettier --check '**/*.{scss,md}'",
    "prettier": "prettier --write '**/*.{scss,md}'",
    "package:brave": "wxt zip --browser=brave",
    "package:chrome": "wxt zip --browser=chrome",
    "package:edge": "wxt zip --browser=edge",
    "package:firefox": "wxt zip --browser=firefox",
    "package:sources": "wxt zip --sources",
    "package": "wxt zip --browser=brave",
    "postinstall": "wxt prepare",
    "prebuild:firefox": "rm -rf build",
    "prebuild": "rm -rf build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "publish": "publish-extension",
    "report:licenses": "node utils/generateLicenseTable.mjs > ATTRIBUTIONS.md && npx prettier --write ATTRIBUTIONS.md",
    "start:brave": "wxt --browser=brave",
    "start:chrome": "wxt --browser=chrome",
    "start:edge": "wxt --browser=edge",
    "//": "Dev mode does not support Firefox MV3, so we debug in MV2 mode instead.",
    "start:firefox": "wxt --browser=firefox --mv2",
    "start": "wxt --browser=brave --debug"
  },
  "dependencies": {
    "@wxt-dev/webextension-polyfill": "^1.0.0",
    "fuse.js": "^7.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitest/coverage-v8": "^3.2.4",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "publish-browser-extension": "^3.0.2",
    "spdx-expression-parse": "^4.0.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "web-ext": "^9.1.0",
    "wxt": "^0.20.11"
  }
}
